<!-- Iterate the items object & update the cards variable -->
<div class="card-deck">
  <%
    if (items) {
	   var cards = '';
  items.forEach(function(item){

       cards += '<div class="card m-2" style="min-width:300px; max-width:300px; min-height:360px; max-height:360px; overflow-y:auto"><div class="card-body"><h5 class="card-title">'+item.display_title+'</h5><a href="'+item.link.url+'"class="btn btn-primary">'+item.link.suggested_link_text+'</a><p class="card-text"><small class="text-muted">'+item.publication_date+'</small></p><p class="card-text">'+item.summary_short+'</p></div></div>';
    }); %>
    <%- cards %>
  <% } %>
</div>
